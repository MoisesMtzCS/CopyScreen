<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CopyScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <style name="CustomRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/custom_rating_bar_item</item>
        <item name="android:indeterminateDrawable">@drawable/custom_rating_bar_item</item>
        <item name="minHeight">12dp</item>
        <item name="maxHeight">12dp</item>
    </style>

    <style name="RatingBarItem">
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:layout_marginStart">@dimen/custom_rating_bar_item_margin</item>
        <item name="tint">@color/color_accent</item>
    </style>


</resources>